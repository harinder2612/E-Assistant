<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harinder.e_assistant.database"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/attnRecordsBar"
        android:background="@color/colorPrimary"
        android:title="Announcements"
        android:titleTextColor="#ffffff"
        android:navigationIcon="@drawable/backbutton">
    </Toolbar>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/annList">

    </ListView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal">

           <EditText
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="6dp"
               android:id="@+id/profAnn"/>
           <ImageView
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:src="@drawable/add"
               android:id="@+id/addAnn"
               android:padding="4dp"/>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>
